<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.visma.home.milagerecorder"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".MilageRecorder"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	
	  <activity android:name=".RecordInput">
            <intent-filter>
                <action android:name="com.visma.home.milagerecorder.RECORDINPUT" />
            </intent-filter>
        </activity>

<activity android:name=".DisplayRecords">
            <intent-filter>
                <action android:name="com.visma.home.milagerecorder.DISPLAYRECORD" />
            </intent-filter>
        </activity>


    </application>
    <uses-sdk android:minSdkVersion="7" />


</manifest> 